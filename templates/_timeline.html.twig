<div class="col-md-6">
  <div class="panel">
    <div class="panel-heading animated fadeInRight">
      <h3><span class="icons icon-social-twitter"></span> My Twitter</h3>
    </div>
    <div class="panel-body">
      <div class="col-md-12">
        <ul class="timeline">
          {% for item in tweets %}
            <li {% if loop.index is even %}class="timeline-inverted"{% endif %}>
              <div class="timeline-badge info"><i class="glyphicon glyphicon-check"></i></div>
              <div class="timeline-panel">
                <div class="timeline-heading">
                  <h4 class="timeline-title">Tweet</h4>
                  <p><small class="text-muted"><i class="glyphicon glyphicon-time"></i> {{ item.created_at|date('jS F \\a\\t g:ia') }} via Twitter</small></p>
                </div>
                <div class="timeline-body">
                  <p>{{ item.text }}</p>
                </div>
              </div>
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
</div>