<div class="col-md-6">
  <div class="panel">
    <div class="panel-heading">
      <h3 class="animated fadeInRight"><i class="fa fa-twitter"></i> My Tweets</h3>
    </div>
    <div class="panel-body">
      <div class="col-md-12">
        <ul class="timeline">
          {% for item in tweets %}
            <li class="animated {% if loop.index is even %}timeline-inverted fadeInRight{% else %}fadeInLeft{% endif %}">
              <div class="timeline-badge info"><i class="fa fa-twitter"></i></div>
              <div class="timeline-panel">
                <div class="timeline-heading">
                  <a href="https://twitter.com/statuses/{{item.id}}" target="_blank"><h4 class="timeline-title">Tweet</h4></a>
                  <p><small class="text-muted"><i class="glyphicon glyphicon-time"></i> {{ item.created_at|date('jS F \\a\\t g:ia') }} via Twitter</small></p>
                </div>
                <div class="timeline-body">
                  <p>{{ item.text }}</p>
                </div>
              </div>
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
</div>